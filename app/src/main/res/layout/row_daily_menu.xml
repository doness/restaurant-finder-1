<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDishNameText"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Dish Name: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDishName"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tvDishNameText"
                android:layout_toEndOf="@id/tvDishNameText"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDishPriceText"
                android:layout_below="@id/tvDishName"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Dish Price: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDishPrice"
                android:layout_alignBottom="@id/tvDishPriceText"
                android:layout_toRightOf="@id/tvDishPriceText"
                android:layout_toEndOf="@id/tvDishPriceText"
                android:textSize="16dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>