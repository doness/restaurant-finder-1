<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlUserInfo">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/ivUserAvatar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserName"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/ivUserAvatar"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserLevelNum"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/ivUserAvatar"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tvUserName"
                    android:textColor="@color/colorBackground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserLevel"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/ivUserAvatar"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@id/tvUserLevelNum"
                    android:textColor="@color/colorBackground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvReviewDate"
                    android:textSize="12sp"
                    android:textColor="@color/colorBackground"
                    android:layout_toRightOf="@id/ivUserAvatar"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@id/tvUserLevel"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlUserInfo"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRatedText"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="RATED: "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserRatingNumber"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@id/tvRatedText"
                    android:layout_toEndOf="@id/tvRatedText"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserRatingTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tvUserRatingNumber"
                    android:layout_toEndOf="@id/tvUserRatingNumber"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvReviewBody"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tvRatedText"
                    android:layout_marginTop="4dp"

                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:id="@+id/ivLikes"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tvReviewBody"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLikes"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/ivLikes"
                    android:layout_toEndOf="@id/ivLikes"
                    android:layout_alignTop="@id/ivLikes"

                    />



            </RelativeLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>